@model List<Web_Portal.Models.Employee>

@{
    ViewData["Title"] = "Personel Listesi";
}
<link rel="stylesheet" href="~/css/employee.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/employee-update.css" asp-append-version="true" />

<!-- 📌 Arama Formu -->
<div class="search-container">
    <form method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" name="searchName" class="form-control" placeholder="Ad Soyad"
                       value="@ViewBag.SearchName">
            </div>
            <div class="col-md-3">
                <input type="text" name="searchEmail" class="form-control" placeholder="E-posta"
                       value="@ViewBag.SearchEmail">
            </div>
            <div class="col-md-3">
                <input type="text" name="searchPhone" class="form-control" placeholder="Telefon"
                       value="@ViewBag.SearchPhone">
            </div>
            <div class="col-md-3">
                <input type="text" name="searchAddress" class="form-control" placeholder="Adres"
                       value="@ViewBag.SearchAddress">
            </div>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Ara</button>
            <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Temizle</a>
        </div>
    </form>
</div>

<!-- 📌 Personel Listesi -->
<div class="employee-container">
    <h2 class="text-center">Personel Listesi</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "Employee")" class="btn btn-add-employee">+ Yeni Personel Ekle</a>
    </div>

    <table class="employee-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Adres</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Employee_ID</td>
                    <td>@employee.Full_Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Address</td>
                    <td>
                        <a href="@Url.Action("Edit", "Employee", new { id = employee.Employee_ID })" class="btn btn-edit">Düzenle</a>
                        <a href="@Url.Action("Delete", "Employee", new { id = employee.Employee_ID })" class="btn btn-delete" onclick="return confirm('Bu personeli silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 📌 Sayfalama Butonları -->
    <div class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" class="page-btn">« Önceki</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a href="@Url.Action("Index", new { page = i })" class="page-btn @(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" class="page-btn">Sonraki »</a>
        }
    </div>
</div>
