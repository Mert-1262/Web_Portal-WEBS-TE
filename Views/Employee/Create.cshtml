@model Web_Portal.Models.Employee

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="employee-form-container">
    <h2>Yeni Personel Ekle</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <input asp-for="Full_Name" class="form-control" placeholder="Ad Soyad" required />
        </div>

        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" required />
        </div>

        <div class="form-group">
            <input asp-for="Phone" class="form-control" placeholder="Telefon" required />
        </div>

        <div class="form-group">
            <textarea asp-for="Address" class="form-control" placeholder="Adres" required></textarea>
        </div>

        <button type="submit" class="btn-save">Kaydet</button>
    </form>
</div>
